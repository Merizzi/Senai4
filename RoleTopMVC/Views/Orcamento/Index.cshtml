@model RoleTopMVC.ViewModels.OrcamentoViewModel
<main>
        <div class="content-footer">
            <form method="POST" action='@Url.Action("Registrar","Orcamento")'>
            <div class="content-icons">
                
                    <a class="titleC">Cadastro De Evento</a>
                  
                        <a> Nome Do Dono</a>
                        <input type="name" placeholder="Nome Dono" maxlength="20" minlength="3" value="@Model.Cliente.Nome"name="nome" required/>
                        
                   
                 
                        <a> Nome Do Evento</a>
                        <input type="name" placeholder="Nome Evento" maxlength="25" minlength="4" name="evento" required/>
                 
                
            </div>
            
                <div class="content-address-info">
                   
                        <a> Email</a>
                        <input type="email" placeholder="Email" class="email" maxlength="20" minlength="3" value="@Model.Cliente.Email" name="email" required/>
                        <a> CPF/CNPJ</a>
                        <input type="text" placeholder="CPF/CNPJ "class="cpfinp" maxlength="11" minlength="11" value="@Model.Cliente.Cpf" name="cpf" required >
                    
                    <a> Data Evento</a>
                    <input type="date" placeholder=""  class="datainp" required name="dataevento"/>
                    <a> Horario Evento</a>
                    <input type="time" placeholder=""  class="datainp" required name="horario"/>
                    <a> Descrição Evento</a>
                    <input type="text" placeholder=""  class="datainp" id="descrinp" required minlength="1" maxlength="130" name="descricao"/>
                    <div class="content-senha">

                    <div class="content-sen">
                        <a>Celular</a> 
                    </div>
                    <div class="content-sen-inp">
                            <input type="text" placeholder="(11 94424-5786)"  class="senhainp" required name="celular"/>

                    </div>
                    
                    </div>
                    <div class="content-address-infob">
                        <input type="submit" id="back-to-top-btn" value="Cadastrar"/> 
                    </div>
                    </div>
                    <div>
                        <label for="servico" class="titleC"> Serviços </label>
                        <select id="servico" name="servico" required>
                            <option value="" disabled selected>Selecione</option>
                            <option value="nenhum"> Nenhum</option>
                            <option value="som"> Som</option>
                            <option value="iluminacao">Luz</option>
                            <option value="ambos"> Som e Luz</option> 
                        </select>
                    </div>
            </form>
            
        </div>       
        
    </main>